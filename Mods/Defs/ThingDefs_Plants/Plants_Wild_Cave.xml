<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--======================= Wild plants - carpets ========================-->

  <ThingDef ParentName="CavePlantBase">
    <defName>PlantGlowMoss</defName>
    <label>glow moss</label>
    <description>A wild moss that grows in clumps in areas of low light and high humidity. Very hardy and frost-resistant. Bioilluminescent.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/GlowMoss</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.10</nutrition>
    </ingestible>
    <plant>
      <leaflessGraphicPath>Things/Plant/Moss_Leafless</leaflessGraphicPath>
      <harvestWork>60</harvestWork>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.6</max>
      </visualSizeRange>
      <growDays>7.5</growDays>
      <topWindExposure>0.0</topWindExposure>
      <fertilitySensitivity>0.90</fertilitySensitivity>
    </plant>
  </ThingDef>


  <!--============================ Wild - Trees ============================-->

  <ThingDef ParentName="CaveTreeBase">
    <defName>PlantTreeGrandParasol</defName>
    <label>grand parasol mushroom</label>
    <description>A giant parasol mushroom with a solid woody stem.</description>
    <graphicData>
      <texPath>Things/Plant/GrandParasol</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>5</Beauty>
    </statBases>
	<ingestible>
      <nutrition>0.75</nutrition>
    </ingestible>
    <plant>
      <growDays>26</growDays>
      <harvestWork>650</harvestWork>
      <harvestYield>35</harvestYield>
    </plant>
  </ThingDef>

  <ThingDef ParentName="CaveTreeBase">
    <defName>PlantTreeImperialYellow</defName>
    <label>imperial yellow mushroom</label>
    <description>A large multitop yellow mushroom with white spots, and a solid woody stem.</description>
    <graphicData>
      <texPath>Things/Plant/ImperialYellow</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>3</Beauty>
    </statBases>
    <ingestible>
      <nutrition>0.75</nutrition>
    </ingestible>
    <plant>
      <growDays>18.05</growDays>
      <harvestWork>600</harvestWork>
      <harvestYield>30</harvestYield>
    </plant>
  </ThingDef>

</Defs>
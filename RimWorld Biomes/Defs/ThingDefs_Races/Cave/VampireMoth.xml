<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--  Vampire Moth  -->
    <ThingDef ParentName="BaseInsect">
        <defName>RWBVampireMoth</defName>
        <label>vampire moth</label>
        <description>Deceptively cute and literally bloodthirsty, these giant moths will drink the blood of any creature big enough.</description>
        <statBases>
            <MoveSpeed>5</MoveSpeed>
            <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
            <ComfyTemperatureMin>0</ComfyTemperatureMin>
            <MarketValue>100</MarketValue>
            <LeatherAmount>0</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>RWBVampireBite</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>20</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <commonality>0.01</commonality>
            </li>
        </tools>
        <comps>
            <li Class="rimworld_biomes.CompProperties_Vampire">
            </li>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>RWBEggVampireMothFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>20</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1</eggCountRange>
            </li>
            <li Class="CompLumbering.CompProperties_Lumbering">
                <cycledGraphic>
                    <texPath>Pawns/Caves/Animals/VampireMoth/VampireMothCycle/VampireMoth</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.4</drawSize>
                    <shadowData>
                        <volume>(0.4, 0.8, 0.4)</volume>
                    </shadowData>
                </cycledGraphic>
                <secondsPerStep>0.8</secondsPerStep>
                <secondsBetweenSteps>0.4</secondsBetweenSteps>
            </li>
        </comps>
        <race>
            <predator>true</predator>
            <foodType>CarnivoreAnimal</foodType>
            <gestationPeriodDays>20</gestationPeriodDays>
            <fleshType>RWBInsectoid</fleshType>
            <body>BeetleLike</body>
            <baseBodySize>1.2</baseBodySize>
            <baseHungerRate>0.10</baseHungerRate>
            <baseHealthScale>0.9</baseHealthScale>
            <wildness>0.8</wildness>
            <lifeExpectancy>10</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>RWBInsectAdult</def>
                    <minAge>0.0</minAge>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>Insectoid</li>
        </tradeTags>
    </ThingDef>
    
    <PawnKindDef ParentName="AnimalKindBase">
        <defName>RWBVampireMoth</defName>
        <label>vampire Moth</label>
        <race>RWBVampireMoth</race>
        <combatPower>115</combatPower>
        <canArriveManhunter>true</canArriveManhunter>
        <wildSpawn_EcoSystemWeight>0.05</wildSpawn_EcoSystemWeight>
        <wildSpawn_spawnWild>true</wildSpawn_spawnWild>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/VampireMoth/VampireMoth</texPath>
                    <drawSize>1.4</drawSize>
                    <color>(224,233,205)</color>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/MuffaloDessicated</texPath>
                    <drawSize>1.2</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
</Defs>

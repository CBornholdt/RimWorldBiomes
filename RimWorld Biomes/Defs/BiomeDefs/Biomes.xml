<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <BiomeDef>
    <defName>RWBCavern</defName>
    <label>cavern</label>
    <description>Caverns</description>
    <workerClass>rimworld_biomes.BiomeWorker_Cavern</workerClass>
    <animalDensity>2.8</animalDensity>
    <plantDensity>0</plantDensity>
    <allowRivers>true</allowRivers>
    <factionBaseSelectionWeight>1</factionBaseSelectionWeight>
    <pathCost_spring>1750</pathCost_spring>
    <pathCost_summer>1750</pathCost_summer>
    <pathCost_fall>1750</pathCost_fall>
    <pathCost_winter>44000</pathCost_winter>
    <texture>World/Biomes/Cavern</texture>
    <soundsAmbient>
      <li>AmbientNightInsects_Standard</li>
    </soundsAmbient>
    <diseaseMtbDays>45</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Malaria</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>
    </diseases>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.015</perlinFrequency>
        <thresholds>
            <li>
                <terrain>RockySoil</terrain>
                <min>0.0</min>
                <max>0.25</max>
            </li>

          <li>
            <terrain>WaterShallow</terrain>
            <min>0.7</min>
            <max>0.8</max>
          </li>
          <li>
            <terrain>WaterDeep</terrain>
            <min>0.8</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>1</Fog>
    </baseWeatherCommonalities>
    <wildPlants>
			<MushroomCluster>.4</MushroomCluster>
			<SkullTop>0.05</SkullTop>
			<PlantBush>0.7</PlantBush>
			<MushroomTree>0.30</MushroomTree>
            <GlowfruitTree>0.012</GlowfruitTree>
			<SpectreCap>0.04</SpectreCap>
            <StarlightShroom>0.05</StarlightShroom>
		</wildPlants>
    <wildAnimals>
        <RWBBovineBeetle>0.2</RWBBovineBeetle>
        <RWBFruitBat>0.1</RWBFruitBat>
        <RWBVampireBat>0.1</RWBVampireBat>
        <RWBVampireMoth>0.1</RWBVampireMoth>
        <RWBCaveSpider>0.1</RWBCaveSpider>
        <RWBCrystalCrab>0.1</RWBCrystalCrab>
        <RWBJellypotBug>0.04</RWBJellypotBug>
        <RWBGiantSnail>0.1</RWBGiantSnail>
        <RWBMole>0.1</RWBMole>
        <RWBPillbug>0.1</RWBPillbug>
        <RWBRhinoBeetle>0.1</RWBRhinoBeetle>
        <RWBSlime>0.1</RWBSlime>
        <Lynx>0.005</Lynx>
    </wildAnimals>
    <allowedPackAnimals>
      <li>Muffalo</li>
    </allowedPackAnimals>
  </BiomeDef>
</Defs>

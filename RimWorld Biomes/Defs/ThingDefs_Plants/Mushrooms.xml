<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	<ThingDef ParentName="CavePlantBase">
		<defName>MushroomCluster</defName>
		<label>mushroom cluster</label>
		<description>Wild Mushrooms. Grows anywhere there is a little light and minimally fertile ground.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Plants/Mushroom_Cluster</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
            <selectable>true</selectable>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.18</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.01</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>2.5</growDays>
            <dieIfLeafless>true</dieIfLeafless>
<!--			<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>-->
			<harvestWork>40</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>
				<min>0.4</min>
				<max>0.6</max>
			</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<reproduceMtbDays>3</reproduceMtbDays>
            <neverBlightable>true</neverBlightable>
		</plant>

	</ThingDef>
    
    <ThingDef ParentName="TreeBase">
        <defName>MushroomTree</defName>
        <label>mushroom tree</label>
        <description>A strong mushroom tree. Slow-going, but its fungus is very strong.</description>
        
        <graphicData>
            <texPath>Plants/Mushroom_Tree</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.2, 0.35, 0.13)</volume>
                <offset>(-0.03,0,-0.44)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
        </statBases>
        <plant>
            <harvestedThingDef>FungalLog</harvestedThingDef>
            <growMinGlow>0</growMinGlow>
            <growOptimalGlow>0</growOptimalGlow>
            <reproduces>false</reproduces>
            <wildClusterRadius>8</wildClusterRadius>
            <cavePlant>true</cavePlant>
            <growDays>30</growDays>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestWork>1000</harvestWork>
            <harvestYield>45</harvestYield>
            <harvestTag>FungalLog</harvestTag>
            <neverBlightable>true</neverBlightable>
        </plant>
    </ThingDef>
    
    <ThingDef ParentName="PlantBase">
        <defName>skulltop</defName>
        <label>skulltop</label>
        <description>DEATH!</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
        </statBases>
        <graphicData>
            <texPath>Plants/Skulltop</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shadowData>
                <volume>(0.2, 0.3, 0.13)</volume>
                <offset>(-0.03,0,-0.44)</offset>
            </shadowData>
        </graphicData>
        <selectable>true</selectable>
        <hideAtSnowDepth>0.5</hideAtSnowDepth>
        <ingestible>
            <nutrition>0.18</nutrition>
        </ingestible>
        <plant>
            <growMinGlow>0</growMinGlow>
            <fertilityMin>0.01</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>2.5</growDays>
            <dieIfLeafless>true</dieIfLeafless>
            <!--			<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>-->
            <harvestWork>40</harvestWork>
            <visualSizeRange>
                <min>0.7</min>
                <max>1.2</max>
            </visualSizeRange>
            <cavePlant>true</cavePlant>
            <topWindExposure>0.4</topWindExposure>
            <reproduceMtbDays>3</reproduceMtbDays>
            <neverBlightable>true</neverBlightable>
        </plant>
        <comps>
            <li Class="rimworld_biomes.CompProperties_ReactiveDefense">
                <defenseTrigger>proximity</defenseTrigger>
                <defenseType>aura</defenseType>
                <aura>skulltop_spore</aura>
                
            </li>
        </comps>
        <tickerType>Normal</tickerType>
    </ThingDef>
</Defs>
